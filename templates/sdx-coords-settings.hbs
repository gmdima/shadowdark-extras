<div class="sdx-coords-wrapper">
    {{!-- Scrollable content area --}}
    <div class="sdx-coords-form">
        {{!-- Appearance Section --}}
        <fieldset class="sdx-coords-section">
            <legend><i class="fas fa-palette"></i> Appearance</legend>

            <div class="form-group">
                <label>Font Family</label>
                <select name="fontFamily">
                    {{#each fontFamilies}}
                    <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>
                        {{this.label}}
                    </option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label>Text Color</label>
                <div class="form-fields">
                    <input type="color" name="fillColor" value="{{settings.fillColor}}">
                    <input type="text" value="{{settings.fillColor}}" placeholder="#ffffff">
                </div>
            </div>

            <div class="form-group">
                <label>Outline Color</label>
                <div class="form-fields">
                    <input type="color" name="strokeColor" value="{{settings.strokeColor}}">
                    <input type="text" value="{{settings.strokeColor}}" placeholder="#000000">
                </div>
            </div>

            <div class="form-group">
                <label>Outline Thickness</label>
                <div class="form-fields">
                    <input type="range" name="strokeThickness" value="{{settings.strokeThickness}}" min="0" max="8"
                        step="1">
                    <span class="range-value">{{settings.strokeThickness}}</span>
                </div>
            </div>

            <div class="form-group">
                <label>Cell Label Size (%)</label>
                <div class="form-fields">
                    <input type="range" name="cellFontScale" value="{{settings.cellFontScale}}" min="5" max="60"
                        step="1">
                    <span class="range-value">{{settings.cellFontScale}}</span>
                </div>
            </div>

            <div class="form-group">
                <label>Cell Label Opacity</label>
                <div class="form-fields">
                    <input type="range" name="cellAlpha" value="{{settings.cellAlpha}}" min="0.05" max="1.0"
                        step="0.05">
                    <span class="range-value">{{settings.cellAlpha}}</span>
                </div>
            </div>
        </fieldset>

        {{!-- Labels Section --}}
        <fieldset class="sdx-coords-section">
            <legend><i class="fas fa-font"></i> Labels</legend>

            <div class="form-group">
                <label>Column Labels (X)</label>
                <select name="xValue">
                    {{#each valueTypes}}
                    <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>
                        {{this.label}}
                    </option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label>Row Labels (Y)</label>
                <select name="yValue">
                    {{#each valueTypesY}}
                    <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>
                        {{this.label}}
                    </option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label>Margin Offset (px)</label>
                <input type="number" name="offset" value="{{settings.offset}}" min="-100" max="200" step="1">
            </div>

            <div class="form-group">
                <label>Leading Zeroes</label>
                <input type="checkbox" name="leadingZeroes" {{#if settings.leadingZeroes}}checked{{/if}}>
            </div>
        </fieldset>

        {{!-- Interaction Section --}}
        <fieldset class="sdx-coords-section">
            <legend><i class="fas fa-mouse-pointer"></i> Click Coordinate</legend>

            <div class="form-group">
                <label>Modifier Key</label>
                <select name="keybindModifier">
                    {{#each modifiers}}
                    <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>
                        {{this.label}}
                    </option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label>Display Duration (ms)</label>
                <input type="number" name="clickTimeout" value="{{settings.clickTimeout}}" min="500" max="10000"
                    step="100">
            </div>
        </fieldset>
    </div>

    {{!-- Footer stays outside the scrollable area --}}
    <footer class="sdx-coords-footer">
        <button type="button" data-action="save"><i class="fas fa-save"></i> Save</button>
    </footer>
</div>