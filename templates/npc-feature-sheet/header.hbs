{{!-- Header Part --}}
<header class="potion-sheet-header">
    <div class="header-left">
        <img src="{{item.img}}" data-edit="img" class="item-image" title="{{item.name}}" />
    </div>
    <div class="header-right">
        <input type="text" name="name" value="{{item.name}}" placeholder="Feature Name" class="item-name" />
        <div class="item-type-badge">
            <i class="fas fa-dragon"></i> {{#if isNPCSpell}}NPC Spell{{else}}NPC Feature{{/if}}
        </div>
    </div>
</header>