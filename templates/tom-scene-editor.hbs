<div class="tom-character-editor tom-scene-editor-simple">

  <header class="tom-editor-header-simple">
    <input type="text" name="name" value="{{scene.name}}" placeholder="New Scene" aria-label="Scene Name" required>
  </header>

  <section class="tom-editor-content-simple">

    <!-- Scene Preview - Centered -->
    <div class="tom-scene-preview-centered">
      {{#if isVideo}}
      <video src="{{scene.background}}" muted loop autoplay></video>
      {{else if scene.background}}
      <img src="{{scene.background}}" alt="Scene preview">
      {{else}}
      <div class="tom-scene-placeholder">
        <i class="fas fa-image"></i>
        <span>No image selected</span>
      </div>
      {{/if}}
    </div>

    <!-- Background Media Input -->
    <div class="form-group-simple">
      <label>Background Media</label>
      <div class="tom-file-input-wrapper">
        <input type="text" name="background" value="{{scene.background}}" placeholder="Path to image or video...">
        <button class="file-picker" data-type="imagevideo" data-target="background">
          <i class="fas fa-file-import"></i>
        </button>
      </div>
    </div>

    <!-- Arena Toggle -->
    <div class="form-group-simple tom-arena-toggle-simple">
      <label class="tom-toggle-label-simple">
        <input type="checkbox" name="isArena" {{#if scene.isArena}}checked{{/if}}>
        <span class="tom-toggle-switch-simple"></span>
        <span class="tom-toggle-text-simple">
          <i class="fas fa-swords"></i> It's an Arena?
        </span>
      </label>
      <span class="tom-hint-simple">Allows players with spawn permission to place tokens on this scene</span>
    </div>

    <!-- Arena Grid Style -->
    {{#if scene.isArena}}
    <div class="form-group-simple">
      <label>Arena Grid Style</label>
      <select name="arenaType">
        {{#each arenaTypeOptions}}
        <option value="{{value}}" {{#if (eq ../selectedArenaType value)}}selected{{/if}}>
          {{label}}
        </option>
        {{/each}}
      </select>
    </div>
    {{/if}}

  </section>

  <footer class="tom-editor-footer-simple">
    <button class="tom-btn-simple tom-btn-cancel" data-action="close">Cancel</button>
    {{#if isCreateMode}}
    <button class="tom-btn-simple tom-btn-primary" data-action="save">
      <i class="fas fa-save"></i> Save Changes
    </button>
    {{else}}
    <button class="tom-btn-simple tom-btn-primary" data-action="save">
      <i class="fas fa-save"></i> Save Changes
    </button>
    {{/if}}
  </footer>

</div>