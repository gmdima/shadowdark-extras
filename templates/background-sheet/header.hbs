{{!-- Header Part --}}
<header class="background-sheet-header">
    <div class="header-left">
        <img src="{{item.img}}" data-edit="img" class="item-image" title="{{item.name}}" />
    </div>
    <div class="header-right">
        <input type="text" name="name" value="{{item.name}}" placeholder="Background Name" class="item-name" />
        <div class="item-type-badge">
            <i class="fas fa-user"></i> Background
        </div>
    </div>
</header>
