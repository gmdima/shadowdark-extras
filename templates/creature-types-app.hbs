<form class="creature-types-form">
    <section class="creature-types-content">
        {{! Header with action buttons }}
        <div class="header-actions flexrow" style="margin-bottom: 10px; gap: 5px;">
            <button type="button" data-action="export-types"
                title="{{localize 'SHADOWDARK_EXTRAS.creature_types.export'}}">
                <i class="fas fa-file-export"></i> {{localize "SHADOWDARK_EXTRAS.creature_types.export"}}
            </button>
            <button type="button" data-action="import-types"
                title="{{localize 'SHADOWDARK_EXTRAS.creature_types.import'}}">
                <i class="fas fa-file-import"></i> {{localize "SHADOWDARK_EXTRAS.creature_types.import"}}
            </button>
            <button type="button" data-action="reset-defaults"
                title="{{localize 'SHADOWDARK_EXTRAS.creature_types.reset'}}">
                <i class="fas fa-undo"></i> {{localize "SHADOWDARK_EXTRAS.creature_types.reset"}}
            </button>
        </div>

        {{! Add new type }}
        <div class="add-type-row flexrow" style="margin-bottom: 15px; gap: 5px;">
            <input type="text" id="new-type-input"
                placeholder="{{localize 'SHADOWDARK_EXTRAS.creature_types.new_type_placeholder'}}" style="flex: 1;" />
            <button type="button" data-action="add-type" class="add-type-btn">
                <i class="fas fa-plus"></i> {{localize "SHADOWDARK_EXTRAS.creature_types.add"}}
            </button>
        </div>

        <hr />

        {{! List of types }}
        <div class="types-list">
            {{#if hasTypes}}
            {{#each types}}
            <div class="type-row flexrow"
                style="margin: 5px 0; padding: 6px 10px; background: rgba(0,0,0,0.05); border-radius: 4px; align-items: center;">
                <span style="flex: 1; font-size: 13px;">{{this}}</span>
                <a data-action="delete-type" data-type="{{this}}"
                    title="{{localize 'SHADOWDARK_EXTRAS.creature_types.delete'}}" style="color: #a33;">
                    <i class="fas fa-trash"></i>
                </a>
            </div>
            {{/each}}
            {{else}}
            <p class="no-types" style="text-align: center; color: #666; font-style: italic;">
                {{localize "SHADOWDARK_EXTRAS.creature_types.no_types"}}
            </p>
            {{/if}}
        </div>
    </section>
</form>